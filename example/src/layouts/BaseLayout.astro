---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro PlantUML Integration Demo" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    margin: 0;
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
      Bitstream Vera Sans Mono, Courier New, monospace;
  }
  .plantuml-diagram {
    margin: 2rem 0;
    text-align: center;
  }
  .plantuml-img {
    max-width: 100%;
    height: auto;
    border: 1px solid #e3e3e3;
    border-radius: 8px;
    padding: 1rem;
    background: #f9f9f9;
  }
  .plantuml-error {
    background: #fee;
    border: 1px solid #fcc;
    border-radius: 4px;
    padding: 1rem;
    margin: 1rem 0;
  }
  .plantuml-error p {
    color: #c00;
    margin: 0 0 1rem 0;
  }
</style>